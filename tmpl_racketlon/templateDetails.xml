				<field name="image3" type="media" label="Photo" description="" default="templates/uk_racketlon/images/gallery/3.jpg"/>
				<field name="text3" type="textarea" default="Stay up-to-date with the latest Racketlon news, recent tournament reports and upcoming events." rows="8" cols="60"  label="Text" description="info text " />
				<field name="button3" type="text" default="Browse" size="50" label="Button text" description="Title button"/>
				<field name="link3" type="text" default="http://" size="50" label="Button link" description="Link button"/>
				
				<field type="spacer" class="text" label=" " />
				<field type="spacer" class="text" label="&lt;b&gt;Box 4&lt;/b&gt;" /> 
