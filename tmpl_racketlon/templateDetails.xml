				<field name="button1" type="text" default="Read more" size="50" label="Button text" description="Title button"/>
				<field name="link1" type="text" default="http://" size="50" label="Button link" description="Link button"/>
				
				<field type="spacer" class="text" label=" " />
				<field type="spacer" class="text" label="&lt;b&gt;Box 2&lt;/b&gt;" /> 
				<field name="title2" type="text" default="Events" size="50" label="Title" description="Title hover image"/>
				<field name="image2" type="media" label="Photo" description="" default="templates/uk_racketlon/images/gallery/2.jpg"/>
				<field name="text2" type="textarea" default="Racketlon events are held up and down the country, throughout the year, so there's bound to be one near you!" rows="8" cols="60"  label="Text" description="info text " />
				<field name="button2" type="text" default="Find events near you" size="50" label="Button text" description="Title button"/>
				<field name="link2" type="text" default="http://" size="50" label="Button link" description="Link button"/>
				
