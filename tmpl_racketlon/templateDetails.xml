		<fields name="params" addfieldpath="/templates/dd_autogarage_84/fields">
		  
		 	<fieldset name="logo" label="Logo">
				<field name="logoFile" default="templates/uk_racketlon/images/Racketlon_logo_small.gif" type="media" label="TPL_LOGO_LABEL" description="TPL_LOGO_DESC"/>
				<field name="logoLink" default="" type="text" label="TPL_LOGOLINK_LABEL" description="TPL_LOGOLINK_DESC"/>
				<field type="spacer" name="spacer" hr="true"/>
			</fieldset>

		  	<fieldset name="license" label="License Key">       
				<field name="license" type="text" default="License key" size="50" label="License key" description="License key"/>         
			</fieldset>	

		  	<fieldset name="analytics" label="Google analytics">
		  		<field name="ac" type="radio" default="0" class="btn-group" label="Google analytics" description="test">
					<option value="0">Disabled</option>
					<option value="1">Enabled</option>
				</field>
				<field name="analytics" type="text" default="UA-XXXXXXXX-1" size="50" label="Tracking ID"/>
			</fieldset>

			<fieldset name="favicon" label="Favicon">    
				<field name="fav" type="media" label="Favicon image" description="" default="templates/uk_racketlon/images/favicon.gif"/>
			</fieldset>	


			<fieldset name="slideshow" label="Slideshow">
				<field name="close_slideshow" type="radio" default="1" class="btn-group"  label="Slideshow" description="Stop the slideshow from appearing">
