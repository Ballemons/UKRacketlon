				<field type="spacer" class="text" label="&lt;b&gt;Slide 2&lt;/b&gt;" />	
				<field name="foto2" type="media" label="Photo" description="" default="templates/uk_racketlon/images/slideshow/2.jpg"/>
				<field name="ts2" type="textarea" default="The 2016 UK Racketlon tour is good to go and it is beautifully laid out on our 2016 Tour Poster.  The tour is not complete and we hope to add additional events as the year goes on, but as a starting point you cannot go wrong." rows="8" cols="60" label="Text"/>
				<field name="b2" type="text" default="View tour" size="50" label="Button text" description="Title button"/>
				<field name="l2" type="text" default="http://" size="50" label="Button link" description="Link button"/>
			
